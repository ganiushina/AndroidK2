<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mGpsInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mGpsInfo" />

    <TextView
        android:id="@+id/mAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mAddress" />

    <TextView
        android:id="@+id/TemperatureTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TemperatureTextView"/>

    <TextView
        android:id="@+id/txtViewPreference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtViewPreference"/>

    <TextView
        android:id="@+id/detailsTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detailsTxtView"/>

    <TextView
        android:id="@+id/weatherIconTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weatherIconTxtView"/>

    <TextView
        android:id="@+id/updateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/updateTextView"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/wallpapers"
        android:contentDescription="@string/todo" />

</LinearLayout>